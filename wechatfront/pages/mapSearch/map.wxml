<view class="itemView">搜索地点
    <input class="search" placeholder="请输入搜索的地点"
     bindinput="search" />
  <button class="searchBtn" bindtap="searchClick">搜索</button>
</view>
<view>
<map id="map" controls="{{controls}}" bindcontroltap="bindcontroltap" markers="{{markers}}" bindtap="click" longitude="{{centerX}}" latitude="{{centerY}}"scale="{{scale}} " 
bindmarkertap="markertap" bindregionchange="regionchange" show-location style="width: 100%; height: 580px; "></map>
</view>